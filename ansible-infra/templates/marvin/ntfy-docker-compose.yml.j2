services:
  ntfy:
    image: binwiederhier/ntfy
    container_name: ntfy
    command:
      - serve
    environment:
      - TZ={{ timezone }}
    volumes:
      - /var/cache/ntfy:/var/cache/ntfy
      - {{ projects_dir }}/{{ ntfy_project_dir }}/server.yml:/etc/ntfy/server.yml:ro
    ports:
      - 8080:80
    healthcheck:
      test: ["CMD-SHELL", "wget -q --tries=1 http://localhost:80/v1/health -O - | grep -Eo '\"healthy\"\\s*:\\s*true' || exit 1"]
      interval: 60s
      timeout: 10s
      retries: 3
      start_period: 40s
    restart: unless-stopped
    init: true
